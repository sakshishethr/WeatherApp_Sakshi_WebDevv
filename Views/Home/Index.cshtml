@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        margin: 0;
        font-family: 'Arial', sans-serif;
    }

    .home-container {
        text-align: center;
        padding: 60px 20px;
        background: url('background-image.jpg') no-repeat center center; 
        background-size: cover;
        color: #fff;
        border-radius: 8px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    }

    .home-header {
        font-size: 2.5em;
        color: #4a90e2;
        margin-bottom: 30px;
    }

    .home-text {
        font-size: 1.2em;
        line-height: 1.6;
        color: #ddd;
        margin-bottom: 30px;
    }

    .home-button {
        background-color: #4a90e2;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        font-size: 1em;
        text-decoration: none;
        display: inline-block;
        margin: 4px 2px;
        transition: background-color 0.4s, color 0.4s;
        cursor: pointer;
    }

    .home-button:hover {
        background-color: #f0ad4e;
        color: black;
    }


        .home-text {
            font-size: 1em;
        }

        .home-button {
            padding: 10px 15px;
            font-size: 0.9em;
        }
    }
</style>

<div class="container home-container">
    <h1 class="home-header">Welcome to Weather App By Sakshi!</h1>
    <p class="home-text">Discover accurate and real-time weather forecasts for any location around the globe.</p>
    <a class="home-button" href="/forecast">Explore Weather</a> <!-- Adjust the href to your weather forecast page's link -->
</div>
